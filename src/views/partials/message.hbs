{{#if success}}
	<div class='container'>
		<div class='row'>
			<div class='col-md-4 mx-auto'>
				<div
					class='alert alert-success alert-dismissible fade show mt-3'
					role='alert'
				>
					<i class='fas fa-check-circle'></i>
					{{success}}
					<button
						type='button'
						class='btn-close'
						data-bs-dismiss='alert'
						aria-label='Close'
					></button>
				</div>
			</div>
		</div>
	</div>
{{/if}}